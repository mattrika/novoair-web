{
    "name": "ng-starter-no-semi-four-space",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "dev": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "e2e:open": "pnpm dlx cypress open",
        "e2e:run": "pnpm dlx cypress run",
        "prepare": "simple-git-hooks",
        "lint": "biome lint ./src --fix --skip=suspicious/noExplicitAny",
        "lint:unsafe": "biome lint ./src --skip=suspicious/noExplicitAny --fix --unsafe",
        "format:ts": "biome check ./src --fix",
        "format:ts:unsafe": "biome check ./src --fix --unsafe",
        "format:json": "biome check *.json --fix",
        "format:html": "prettier --write 'src/**/*.{html,xml}'",
        "format:css": "prettier --write 'src/**/*.{scss,css,less}'",
        "format": "pnpm format:html && pnpm format:css && pnpm format:ts",
        "ng-update": "ng update @angular/core @angular/cli @angular/cdk @schematics/angular primeng @primeng/themes --allow-dirty",
        "make-env-file": "tsc src/environments/make-env-file.ts && node src/environments/make-env-file.js && rm src/environments/make-env-file.js"
    },
    "dependencies": {
        "@angular/animations": "^19.2.0",
        "@angular/cdk": "^19.2.1",
        "@angular/common": "^19.2.0",
        "@angular/compiler": "^19.2.0",
        "@angular/core": "^19.2.0",
        "@angular/forms": "^19.2.0",
        "@angular/platform-browser": "^19.2.0",
        "@angular/platform-browser-dynamic": "^19.2.0",
        "@angular/router": "^19.2.0",
        "@auth0/angular-jwt": "^5.2.0",
        "@ng-icons/core": "^30.3.0",
        "@ng-icons/heroicons": "^30.3.0",
        "@ng-icons/material-icons": "^30.3.0",
        "@ng-web-apis/common": "^4.11.1",
        "@ngneat/dialog": "^5.1.2",
        "@primeng/themes": "^19.0.9",
        "date-fns": "^4.1.0",
        "es-toolkit": "^1.32.0",
        "ng-primitives": "^0.22.0",
        "ngx-sonner": "^3.0.0",
        "primeicons": "^7.0.0",
        "primeng": "^19.0.9",
        "radash": "^12.1.0",
        "rxjs": "~7.8.2",
        "tailwindcss-primeui": "^0.5.1",
        "tslib": "^2.8.1",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.2.0",
        "@angular-eslint/schematics": "^19.1.0",
        "@angular/cli": "^19.2.0",
        "@angular/compiler-cli": "^19.2.0",
        "@biomejs/biome": "^1.9.4",
        "@schematics/angular": "^19.2.0",
        "@tailwindcss/aspect-ratio": "0.4.2",
        "@tailwindcss/postcss": "^4.0.9",
        "@tailwindcss/typography": "^0.5.16",
        "@types/jasmine": "~5.1.7",
        "@types/node": "^22.13.8",
        "autoprefixer": "^10.4.20",
        "cypress": "^14.1.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-angular": "^4.1.0",
        "eslint-plugin-prettier": "^5.2.3",
        "jasmine-core": "~5.6.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "lint-staged": "^15.4.3",
        "postcss": "^8.5.3",
        "prettier": "^3.5.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "simple-git-hooks": "^2.11.1",
        "tailwindcss": "^3.4.17",
        "tailwindcss-elevation": "^2.0.0",
        "tailwindcss-scrollbar": "^0.1.0",
        "typescript": "~5.8.2"
    },
    "optionalDependencies": {
        "@biomejs/cli-darwin-x64": "~1.9.4",
        "@biomejs/cli-linux-x64": "~1.9.4",
        "@biomejs/cli-win32-x64": "~1.9.4"
    },
    "lint-staged": {
        "src/**/*.{html,xml}": "prettier --write",
        "src/**/*.{ts,js,scss,css,less}": [
            "biome check --fix"
        ],
        "cypress/**/*.{ts,js}": [
            "biome format --fix"
        ],
        "*.json": "biome check --fix"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint",
        "pre-push": "pnpm format",
        "preserveUnused": true
    }
}
