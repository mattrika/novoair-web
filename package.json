{
    "name": "ng-starter-no-semi-four-space",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "dev": "ng serve",
        "build": "ng build",
        "build:alternative": "NODE_ENV=production node --max_old_space_size=8192 node_modules/@angular/cli/bin/ng build --prod",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "e2e:open": "npx cypress open",
        "e2e:run": "npx cypress run",
        "prepare": "husky",
        "lint": "npx biome lint ./src --write --skip=suspicious/noExplicitAny",
        "lint:unsafe": "npx biome lint ./src --skip=suspicious/noExplicitAny --write --unsafe",
        "format:ts": "npx biome check ./src --write",
        "format:ts:unsafe": "npx biome check ./src --write --unsafe",
        "format:json": "npx biome check *.json --write",
        "format:html": "prettier --write 'src/**/*.{html,xml,scss,css,less}'",
        "format": "npm run format:html && npm run format:json && npm run format:ts",
        "ng-update": "ng update @angular/core @angular/cli @angular/cdk @schematics/angular --allow-dirty",
        "make-env-file": "tsc src/environments/make-env-file.ts && node src/environments/make-env-file.js && rm src/environments/make-env-file.js"
    },
    "dependencies": {
        "@angular/animations": "^18.1.4",
        "@angular/cdk": "^18.1.4",
        "@angular/common": "^18.1.4",
        "@angular/compiler": "^18.1.4",
        "@angular/core": "^18.1.4",
        "@angular/forms": "^18.1.4",
        "@angular/platform-browser": "^18.1.4",
        "@angular/platform-browser-dynamic": "^18.1.4",
        "@angular/router": "^18.1.4",
        "@auth0/angular-jwt": "^5.2.0",
        "@ng-web-apis/common": "^4.2.1",
        "@ngneat/dialog": "^5.1.1",
        "date-fns": "^3.6.0",
        "ng-primitives": "^0.6.0",
        "ngx-sonner": "^2.0.1",
        "radash": "^12.1.0",
        "rxjs": "~7.8.1",
        "tslib": "^2.6.3",
        "zone.js": "~0.14.8"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.1.4",
        "@angular/cli": "^18.1.4",
        "@angular/compiler-cli": "^18.1.4",
        "@biomejs/biome": "^1.8.3",
        "@schematics/angular": "^18.1.4",
        "@tailwindcss/aspect-ratio": "0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.13",
        "@types/jasmine": "~5.1.4",
        "@types/node": "^22.0.0",
        "autoprefixer": "^10.4.19",
        "cypress": "^13.13.1",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-angular": "^4.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.3",
        "jasmine-core": "~5.2.0",
        "karma": "~6.4.3",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "lint-staged": "^15.2.7",
        "postcss": "^8.4.40",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "tailwindcss": "^3.4.9",
        "tailwindcss-elevation": "^2.0.0",
        "tailwindcss-scrollbar": "^0.1.0",
        "typescript": "~5.5.4"
    },
    "optionalDependencies": {
        "@biomejs/cli-darwin-x64": "~1.8.3",
        "@biomejs/cli-linux-x64": "~1.8.3",
        "@biomejs/cli-win32-x64": "~1.8.3"
    },
    "lint-staged": {
        "src/**/*.{html,xml,scss,css,less}": "npx prettier --write",
        "src/**/*.{ts,js}": ["npx biome check --fix"],
        "cypress/**/*.{ts,js}": ["npx biome format --fix"],
        "*.json": "npx biome check --fix"
    }
}
