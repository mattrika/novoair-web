{
    "name": "ng-starter-no-semi-four-space",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "dev": "ng serve",
        "build": "ng build",
        "build:alternative": "NODE_ENV=production node --max_old_space_size=8192 node_modules/@angular/cli/bin/ng build --prod",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "e2e:open": "pnpm dlx cypress open",
        "e2e:run": "pnpm dlx cypress run",
        "prepare": "pnpm dlx simple-git-hooks",
        "lint": "pnpm dlx biome lint ./src --fix --skip=suspicious/noExplicitAny",
        "lint:unsafe": "pnpm dlx biome lint ./src --skip=suspicious/noExplicitAny --fix --unsafe",
        "format:ts": "pnpm dlx biome check ./src --fix",
        "format:ts:unsafe": "pnpm dlx biome check ./src --fix --unsafe",
        "format:json": "pnpm dlx biome check *.json --fix",
        "format:html": "prettier --write 'src/**/*.{html,xml}'",
        "format:css": "prettier --write 'src/**/*.{scss,css,less}'",
        "format": "pnpm format:html && pnpm format:css && pnpm format:json && pnpm format:ts",
        "ng-update": "ng update @angular/core @angular/cli @angular/cdk @schematics/angular --allow-dirty",
        "make-env-file": "tsc src/environments/make-env-file.ts && node src/environments/make-env-file.js && rm src/environments/make-env-file.js"
    },
    "dependencies": {
        "@angular/animations": "^18.2.13",
        "@angular/cdk": "^18.2.14",
        "@angular/common": "^18.2.13",
        "@angular/compiler": "^18.2.13",
        "@angular/core": "^18.2.13",
        "@angular/forms": "^18.2.13",
        "@angular/platform-browser": "^18.2.13",
        "@angular/platform-browser-dynamic": "^18.2.13",
        "@angular/router": "^18.2.13",
        "@auth0/angular-jwt": "^5.2.0",
        "@ng-web-apis/common": "^4.11.1",
        "@ngneat/dialog": "^5.1.1",
        "@primeng/themes": "^18.0.0-rc.2",
        "date-fns": "^4.1.0",
        "es-toolkit": "^1.29.0",
        "ng-primitives": "^0.15.0",
        "ngx-sonner": "^2.0.2",
        "primeng": "^18.0.0-rc.2",
        "radash": "^12.1.0",
        "rxjs": "~7.8.1",
        "tailwindcss-primeui": "^0.3.4",
        "tslib": "^2.8.1",
        "zone.js": "~0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.12",
        "@angular/cli": "^18.2.12",
        "@angular/compiler-cli": "^18.2.13",
        "@biomejs/biome": "^1.9.4",
        "@schematics/angular": "^18.2.12",
        "@tailwindcss/aspect-ratio": "0.4.2",
        "@tailwindcss/typography": "^0.5.15",
        "@types/jasmine": "~5.1.5",
        "@types/node": "^22.10.1",
        "autoprefixer": "^10.4.20",
        "cypress": "^13.16.0",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-angular": "^4.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jasmine-core": "~5.4.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.49",
        "prettier": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "simple-git-hooks": "^2.11.1",
        "tailwindcss": "^3.4.15",
        "tailwindcss-elevation": "^2.0.0",
        "tailwindcss-scrollbar": "^0.1.0",
        "typescript": "~5.5.4"
    },
    "optionalDependencies": {
        "@biomejs/cli-darwin-x64": "~1.9.4",
        "@biomejs/cli-linux-x64": "~1.9.4",
        "@biomejs/cli-win32-x64": "~1.9.4"
    },
    "lint-staged": {
        "src/**/*.{html,xml}": "pnpm prettier --write",
        "src/**/*.{ts,js,scss,css,less}": ["pnpm biome check --fix"],
        "cypress/**/*.{ts,js}": ["pnpm biome format --fix"],
        "*.json": "pnpm biome check --fix"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint",
        "pre-push": "pnpm format",
        "preserveUnused": true
    }
}
